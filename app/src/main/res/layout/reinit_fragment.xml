<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Fragments.ReinitFragment" android:id="@+id/frameLayout2"
                                                   android:background="@color/colorPrimary">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Réinitialiser mot de passe"
            android:textSize="22dp"
            android:fontFamily="@font/comic"
            android:textColor="@color/colorOnPrimary"
            android:id="@+id/reinitTitle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="120dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
<!--Margin top to redefine-->

    <EditText
            android:ems="10"
            android:id="@+id/NewPasswordEdit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:hint="Nouveau mot de passe"
            android:layout_marginTop="90dp"
            android:drawableLeft="@drawable/ic_lock_resized"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/colorOnPrimary"
            android:backgroundTint="@color/colorOnPrimary"
            app:layout_constraintTop_toBottomOf="@+id/reinitTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/comic"
            android:textSize="18dp"
            android:textColor="@color/colorOnPrimary"
            app:layout_constraintHorizontal_bias="0.0" android:inputType="textPassword"/>

    <EditText
            android:id="@+id/ConfirmEdit"
            android:textColor="@color/colorOnPrimary"
            android:textColorHint="@color/colorOnPrimary"
            android:backgroundTint="@color/colorOnPrimary"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:hint="Confirmer"
            android:drawableLeft="@drawable/ic_confirm_resized"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/comic"
            android:textSize="18dp"
            android:inputType="textPassword"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/NewPasswordEdit" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30dp"/>

    <Button
            android:text="Réinitialiser"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/ReinitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/ConfirmEdit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="35dp" android:layout_marginStart="35dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:fontFamily="@font/comic"
            app:backgroundTint="@color/colorPrimaryDark"
            app:cornerRadius="20dp"
            android:textSize="16dp"

    />


</androidx.constraintlayout.widget.ConstraintLayout>