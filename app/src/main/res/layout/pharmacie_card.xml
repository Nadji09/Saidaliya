<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="?attr/actionBarDivider"
            android:id="@+id/ImagePharmacieCard"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
        <TextView
                android:text="TextView"
                style="@style/TitlePharmacieCard"
                android:textColor="@color/colorCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NamePharmacie" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ImagePharmacieCard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:fontFamily="@font/comic_bold"/>
        <TextView
                android:text="TextView"
                style="@style/body1"
                android:textColor="@color/colorCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AddressPharmacie" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/NamePharmacie"
                app:layout_constraintStart_toStartOf="@+id/NamePharmacie"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>