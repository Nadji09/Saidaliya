<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <TextView
                android:text="TextView"
                style="@style/body2"
                android:textColor="@color/colorCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DateCommande" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="TextView"
                android:textColor="@color/colorCard"
                android:textAppearance="@style/headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NameCommande"
                app:layout_constraintTop_toBottomOf="@+id/DateCommande"
                app:layout_constraintStart_toStartOf="@+id/DateCommande"/>

        <TextView
                android:text="TextView"
                android:textColor="@color/colorCard"
                style="@style/body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PlaceCommande"
                app:layout_constraintTop_toBottomOf="@+id/NameCommande"
                app:layout_constraintStart_toStartOf="@+id/NameCommande" android:layout_marginTop="2dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="TextView"
                android:fontFamily="@font/comic"
                android:textAppearance="@style/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/StateCommande"
                app:layout_constraintBaseline_toBaselineOf="@+id/PlaceCommande"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>