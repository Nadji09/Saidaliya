<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Fragments.PharmacieFragment" android:id="@+id/frameLayout5">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/nestedScrollView">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:id="@+id/imagePharma"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <ImageButton
                    android:background="#00000000"
                    android:id="@+id/backUp2"
                    android:elevation="8dp"
                    android:src="@drawable/ic_arrow_back_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="BARRONS CHEMIST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/namePharma"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imagePharma"
                    android:fontFamily="@font/work_sans_bold"
                    android:textSize="26dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>

            <ImageButton
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="30dp"
                    android:layout_height="30dp" tools:srcCompat="@tools:sample/avatars[14]"
                    android:id="@+id/mapsButton" android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@+id/imagePharma" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_map"/>
            <!-- was background = ""drawable/mapbutton-->


            <ImageButton
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="28dp"
                    android:layout_height="28dp" tools:srcCompat="@tools:sample/avatars[14]"
                    android:scaleType="centerCrop"
                    android:id="@+id/fbButton" app:layout_constraintEnd_toStartOf="@+id/mapsButton"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/imagePharma"
                    android:src="@drawable/ic_fb"
                    android:layout_marginTop="16dp"/>

            <TextView
                    android:text="N°7 Bt 4, cité Benboulaid, Blida "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/addressPharma"
                    android:textSize="17dp"
                    android:textColor="@color/colorCard"
                    android:fontFamily="@font/comic"
                    android:drawableLeft="@drawable/ic_location_drawable"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/fbButton" android:layout_marginStart="15dp"
                    app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/phonePharma"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="15dp" android:layout_marginStart="15dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/addressPharma"
                    android:text=""
                    android:textSize="17dp"
                    android:textColor="@color/colorCard"
                    android:fontFamily="@font/comic"
                    android:drawableLeft="@drawable/ic_phone_drawable"
                    android:drawablePadding="8dp"/>

            <TextView
                    android:id="@+id/schedulePharma"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/colorCard"
                    android:fontFamily="@font/comic"
                    android:drawableLeft="@drawable/ic_time_xml"
                    android:drawablePadding="8dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/phonePharma"
                    android:layout_marginTop="16dp"
                    android:textSize="17dp"/>

            <ImageView
                    android:id="@+id/caisse"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/schedulePharma"
                    android:src="@drawable/ic_conv"
                    android:scaleType="centerCrop"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toRightOf="@+id/caisse"
                    app:layout_constraintTop_toBottomOf="@+id/schedulePharma"
                    android:layout_marginLeft="8dp" android:id="@+id/linearLayout2">


                <TextView
                        android:text="CNAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cnas"
                        android:background="@drawable/caisseconv"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textAlignment="center"
                        tools:layout_editor_absoluteY="438dp" tools:layout_editor_absoluteX="20dp"/>

                <TextView
                        android:text="CASNOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/casnos"
                        android:background="@drawable/caisseconv"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginLeft="8dp"
                        tools:layout_editor_absoluteY="438dp" tools:layout_editor_absoluteX="20dp"
                        android:textAlignment="center"/>

                <TextView
                        android:text="CNR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cnr"
                        android:background="@drawable/caisseconv"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginLeft="8dp"
                        tools:layout_editor_absoluteY="438dp" tools:layout_editor_absoluteX="20dp"
                        android:textAlignment="center"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/commanderIci"
                    android:text="Commander d'ici"
                    android:layoutDirection="rtl"
                    app:icon="@drawable/ic_add_black_24dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:cornerRadius="16dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/colorOnPrimary"
                    android:background="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout2"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!--old-->


</androidx.constraintlayout.widget.ConstraintLayout>