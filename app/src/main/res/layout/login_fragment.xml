<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Fragments.LoginFragment"
                                                   android:id="@+id/frameLayout"
android:background="@color/colorPrimary">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/logo"
            android:layout_marginTop="68dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />


    <EditText
            android:id="@+id/phoneEdit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:hint="Numéro de téléphone"
            android:layout_marginTop="48dp"
            android:drawableLeft="@drawable/ic_phone_resized"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/colorOnPrimary"
            android:backgroundTint="@color/colorOnPrimary"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/comic"
            android:textSize="18dp"
            android:inputType="phone"
            android:textColor="@color/colorOnPrimary"
            app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:id="@+id/passwordEdit"
            android:textColor="@color/colorOnPrimary"
            android:textColorHint="@color/colorOnPrimary"
            android:backgroundTint="@color/colorOnPrimary"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:hint="Mot de passe"
            android:drawableLeft="@drawable/ic_lock_resized"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/comic"
            android:textSize="18dp"
            android:inputType="textPassword"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneEdit" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent"
    />

    <Button
            android:id="@+id/LoginButton"
            android:text="SE CONNECTER"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordEdit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            android:fontFamily="@font/comic"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            app:backgroundTint="@color/colorPrimaryDark"
            app:cornerRadius="20dp"
            android:textSize="16dp"

    />
    <Button
            android:id="@+id/anonymeButton"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:text="Continuer en anonyme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/LoginButton" android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="8dp"
            android:background="#00000000"
            android:textSize="8dp"
            android:textStyle="bold"
            android:fontFamily="@font/comic"

    />
    <Button
            android:id="@+id/CreateAccountButton"
            android:text="Créer un nouveau compte"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:background="#00000000"
            android:textSize="8dp"
            android:fontFamily="@font/comic"
    />

</androidx.constraintlayout.widget.ConstraintLayout>